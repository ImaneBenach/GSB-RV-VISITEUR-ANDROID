<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RechercheRvActivity">

    <ImageView
        android:id="@+id/consult"
        android:layout_width="match_parent"
        android:layout_height="397dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp"
        android:src="@drawable/consult" />

    <TextView
        android:id="@+id/mois"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/consult"
        android:text="Mois"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"/>

    <Spinner
        android:layout_marginTop="17dp"
        android:layout_below="@+id/mois"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        />

    <TextView
        android:id="@+id/annee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner"
        android:text="AnnÃ©e"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"/>

    <Spinner
        android:layout_marginTop="17dp"
        android:layout_below="@+id/annee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner2"
        />

    <Button
        android:id="@+id/afficher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Afficher la liste des rapports"
        android:textAllCaps="true"
        android:layout_below="@+id/spinner2"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:textSize="25dp"
        android:onClick="afficher"
        android:textColor="@color/colorAccent"
        />

</RelativeLayout>