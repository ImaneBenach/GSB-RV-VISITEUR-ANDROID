<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:scaleType="fitCenter"
                android:src="@drawable/pics" />

            <TextView
                android:id="@+id/tvMatricule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/image"
                android:text="Matricule"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="27dp"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp" />

            <EditText
                android:id="@+id/etMatricule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/tvMatricule"
                android:hint="..."
                android:textColor="@color/colorAccent"
                android:textSize="26dp"
                android:padding="10dp"
                android:textAlignment="center"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp" />

            <TextView
                android:id="@+id/tvMdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/etMatricule"
                android:text="Mot de passe"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="27dp"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp" />

            <EditText
                android:id="@+id/etMdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/tvMdp"
                android:hint="..."
                android:textColor="@color/colorAccent"
                android:textSize="26dp"
                android:padding="10dp"
                android:inputType="textPassword"
                android:textAlignment="center"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp" />

            <Button
                android:id="@+id/bValider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/etMdp"
                android:text="Valider"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:textColor="@color/colorAccent"
                android:onClick="seConnecter"
                />

            <Button
                android:id="@+id/bAnnuler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/bValider"
                android:textSize="20dp"
                android:text="Annuler"
                android:textColor="@color/colorAccent"
                android:onClick="Annuler"
                />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>